<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Helldivers2.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Helldivers2.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Helldivers2">
    <TabBar>
        <Tab Title="Notes">
            <ShellContent ContentTemplate="{DataTemplate pages:NotesPage}" Route="Notes"/>
        </Tab>
        <Tab Title="Campaign">
            <ShellContent ContentTemplate="{DataTemplate pages:CampaignPage}" Route="Campaign" />
        </Tab>
    </TabBar>
</Shell>